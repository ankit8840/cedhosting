Add product
SELECT tbl_product_description.id,prod_id,description,mon_price,annual_price,sku,tbl_product.id,prod_parent_id,prod_name,link,prod_available,prod_launch_date FROM tbl_product_description INNER JOIN tbl_product ON tbl_product_description.prod_id =tbl_product.id


delete
DELETE tbl_product, tbl_product_description    
FROM    tbl_product    
INNER JOIN tbl_product_description   
ON tbl_product.id=tbl_product_description.prod_id 
WHERE   tbl_product.id=18; 